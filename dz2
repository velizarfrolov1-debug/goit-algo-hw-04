from pathlib import Path

def get_cats_info(p):
    r = []
    try:
        f = Path(p)
        with f.open("r", encoding="utf-8") as t:
            for l in t:
                i, n, a = l.strip().split(",")
                d = {
                    "id": i,
                    "name": n,
                    "age": a
                }
                r.append(d)
        return r
    except FileNotFoundError:
        return []
    except ValueError:
        return []
